<%- include ("../../partials/header") -%>
<section class="blog_part section_padding section_transaction col-4">
    <div class="container container_transaction1">
        <div class="modal-header">
            <p class="heading lead">Tài khoản tiết kiệm </p>
        </div>
        <% if(errors) {%>
           
              
            <div style="color: rgb(224, 87, 87);" class="alert alert-success mt-3" role="alert">
              <i style="color: red;" class="fas fa-exclamation-triangle pr-2"></i>
              <%= errors %> 
            </div>
           
          <%}%> 
        <form method="POST" class="mt-4 ">
            <table>
                <tr>
                    <td>Chủ tài khoản : </td>
                    <td> &nbsp   <%= currentUser.displayName %></td>
                </tr>
                <tr>
                    <td>Số tài khoản :</td>
                    <td>&nbsp  <%= account.accountNumber %></td>
                </tr>
                <tr>
                    <td>Số tiền : </td>
                    <td>&nbsp  <%= SoTien %> VND</td>
                </tr>
                <tr>
                    <td>Kỳ hạn :</td>
                    <td>&nbsp  <%= depositTerm %></td>
                </tr>
               
                <tr>
                    <td>Lãi xuất :</td>
                    <td>&nbsp  <%= interest %>%/Năm</td>
                </tr>
                <tr>
                    <td>Hình thức trả lãi :</td>
                    <td>&nbsp  <%= formInterest=="1" ?"Lãi nhập gốc":"Lãi trả vào TK tiền gửi thanh toán khi đến hạn trả lãi"  %>%/Năm</td>
                </tr>
                <tr>
                    <td>Mã xác thực gửi qua email :</td>
                    <td>&nbsp  <%= email %></td>
                </tr>
            </table>
            

          

            <div class="form-group mt-3">
                <label for="formGroupExampleInput">Nhập mã số &nbsp (gửi qua Email)</label>
                <input name="OTP" type="text" class="form-control" id="formGroupExampleInput"
                    placeholder="VD : 0123">
            </div>

            <div class="form-group text-right">
                <button type="button" onclick="goBack()" class="btn btn-primary  mr-3">Quay lại</button>
                <button type="submit" class="btn btn-primary">Xác Nhận</button>
            </div><br>
        </form>
    </div>
</section>
<script>

    function goBack() {
      window.history.back()
    }  
  </script>
<%- include ("../../partials/footer") -%>